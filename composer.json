{
    "name": "acorbaq/slsant",
    "description": "Seguimiento de lotes (SLSAnt) - prototipo SQLite portable",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "scripts/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration phpunit.xml"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": false
    }
}